<section>

        <a href="/admin/add-product "><button class="btn btn-primary">Add Product</button></a>
        <table class="table table-striped  mt-3">
                <thead>
                        <tr>
                                <th scope="col">No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Image</th>
                        </tr>
                </thead>
                <tbody>
                        {{#each products}}
                        <tr>
                                <th scope="row">1</th>
                                <td>{{this.name}}</td>
                                <td>{{this.desc}}</td>
                                <td><img style="height: 8rem; width:8rem;" src="/product-images/{{this._id}}.jpg" alt=""></td>
                        </tr>
                        {{/each}}

                </tbody>
        </table>

</section>